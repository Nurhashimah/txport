- provide(:title, 'Vehicle No (Civil) Details')
- model_class = VehicleNo
.page-header
  %h1= t 'vehicle_nos.title', :default => model_class.model_name.human
%p#notice= notice

%dl.dl-horizontal
  %dt= t 'vehicle_nos.vehicle_army_id', :default => model_class.human_attribute_name(:civil_no) + ":"
  %dd= @vehicle_no.try(:vehicle_army).try(:v_army_no)
  
%dl.dl-horizontal
  %dt= t 'vehicles.reg_no2', :default => model_class.human_attribute_name(:vehicle_id) + ":"
  %dd= @vehicle_no.try(:vehicle).try(:reg_no)

%dl.dl-horizontal
  %dt= t 'vehicle_nos.start_on', :default =>  model_class.human_attribute_name(:start_on) + ":"
  %dd= @vehicle_no.start_on.try(:strftime, '%d-%b-%Y')

%dl.dl-horizontal
  %dt= t 'vehicle_nos.end_on', :default =>  model_class.human_attribute_name(:end_on) + ":"
  %dd= @vehicle_no.end_on.try(:strftime, '%d-%b-%Y')

.form-actions
  = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back_to_vehicles")), vehicles_path, :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), vehicle_nos_path, :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), |
    edit_vehicle_no_path(@vehicle_no), :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), vehicle_no_path(@vehicle_no),                                                                                                    |
    :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'       