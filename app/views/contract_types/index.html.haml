- provide(:title, 'Contract type')
- model_class = ContractType
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize
  
  
.navbar.navbar-inverse
  .navbar-inner
    %ul.nav
      %li= link_to content_tag(:li, fa_icon("truck", text: "New Contract type")), new_contract_type_path
    %ul.nav.pull-right
      %li#toga= link_to content_tag(:li, fa_icon("search", text: "Search")), "#"
      %li= link_to content_tag(:li, fa_icon("print", text: "Print")), "#"
      
      
%table.table.table-condensed.table-hover
  %thead
    %tr
      %th Short Name
      %th Description
      %th
  %tbody
    - @contract_types.each do |contract_type|
      %tr
        %td= contract_type.short_name
        %td= contract_type.description
        = render :partial => 'action_menu', :locals => { :contract_type => contract_type }
      
      
