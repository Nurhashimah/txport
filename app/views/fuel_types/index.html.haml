- provide(:title, 'Fuel Type')
- model_class = FuelType
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize
  
  
.navbar.navbar-inverse
  .navbar-inner
    %ul.nav
      %li= link_to content_tag(:li, fa_icon("truck", text: "New Fuel Type")), new_fuel_type_path
    %ul.nav.pull-right
      %li#toga= link_to content_tag(:li, fa_icon("search", text: "Search")), "#"
      %li= link_to content_tag(:li, fa_icon("print", text: "Print")), "#"
      
      
%table.table.table-condensed.table-hover
  %thead
    %tr
      %th Shortname
      %th Name
      %th 

  %tbody
    - @fuel_types.each do | fuel_type |
      %tr
        %td= fuel_type.shortname
        %td= fuel_type.name
        = render :partial => 'action_menu', :locals => { :fuel_type => fuel_type }
      
      
