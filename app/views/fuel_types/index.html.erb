<h1>Listing fuel_types</h1>

<table>
  <thead>
    <tr>
      <th>Shortname</th>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @fuel_types.each do |fuel_type| %>
      <tr>
        <td><%= fuel_type.shortname %></td>
        <td><%= fuel_type.name %></td>
        <td><%= link_to 'Show', fuel_type %></td>
        <td><%= link_to 'Edit', edit_fuel_type_path(fuel_type) %></td>
        <td><%= link_to 'Destroy', fuel_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

