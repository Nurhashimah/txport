- provide(:title, 'Unit Fuels')
- model_class = UnitFuel
.page-header
  %h1= t 'unit_fuels.title', :default => model_class.model_name.human.pluralize
  
  
.navbar.navbar-inverse
  .navbar-inner
    %ul.nav
      %li= link_to content_tag(:li, fa_icon("truck", text: (t 'actions.new'))), new_unit_fuel_path
    %ul.nav.pull-right
      %li.toga= link_to content_tag(:li, fa_icon("search", text: (t 'actions.search'))), "#", class: "toga"
      %li= link_to content_tag(:li, fa_icon("print", text: (t 'actions.print'))), "#"

.row.searchit{style: "display:none;"}
  .span9offset1
    = search_form_for @search, class: "form-inline" do |f|
      .field
        = f.text_field :unit_id_cont, class: "input-medium search-query", placeholder: "Unit Contains" 
        = f.text_field :issue_date_cont, class: "input-medium search-query", placeholder: "Issue Date Contains" 
        = f.submit "Search", class: "btn btn-warning"
      
      
%table.table.table-condensed.table-hover
  %thead
    %tr
      %th= t 'unit_fuels.unit_id'
      %th= sort_link @search, :issue_date, t('unit_fuels.issue_date')
      %th= t 'unit_fuels.diesel_usage'
      %th= t 'unit_fuels.petrol_usage'
      %th 
  %tbody
    - @unit_fuels.each do |unit_fuel|
      %tr
        %td= check_kin {unit_fuel.unit.name}
        %td= check_kin {l(unit_fuel.issue_date)}
        %td= UnitFuel.diesel_usage(unit_fuel)     
        %td= UnitFuel.petrol_usage(unit_fuel)
        = render :partial => 'action_menu', :locals => { :unit_fuel => unit_fuel }
      
      

