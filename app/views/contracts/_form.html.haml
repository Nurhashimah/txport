.container{:style => "padding-left: 60px;"}
  = form_for @contract, :html => { :class => 'form-horizontal' }  do |f|
    = render 'shared/error_messages', object: f.object
          
    .control-group
      = f.label :contract_no, :class => 'control-label'
      .controls= f.text_field :contract_no, :class => 'text_field input-xxlarge'
    
    .control-group
      = f.label :name, :class => 'control-label'
      .controls= f.text_field :name, :class => 'text_field input-xxlarge'
    
    .control-group
      = f.label :description, :class => 'control-label'
      .controls= f.text_area :description, :class => 'text_field input-xxlarge'
   
    .control-group
      = f.label :company_id, :class => 'control-label'
      .controls= f.number_field :company_id, :class => 'text_field'    

    .control-group
      = f.label :value, :class => 'control-label'
      .controls= f.text_field :value, :class => 'text_field'
   
    .control-group
      = f.label :starts_on, :class => 'control-label'
      .controls= f.date_select :starts_on, :class => 'text_field'
    
    .control-group
      = f.label :ends_on, :class => 'control-label'
      .controls= f.date_select :ends_on, :class => 'text_field'

    .control-group
      = f.label :issued_by, :class => 'control-label'
      .controls= f.date_select :issued_by, :class => 'text_field'

    .control-group
      = f.label :contract_type, :class => 'control-label'
      .controls= f.number_field :contract_type, :class => 'text_field'
 
    .form-actions
      = f.submit nil, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), |
        contracts_path, :class => 'btn'     

