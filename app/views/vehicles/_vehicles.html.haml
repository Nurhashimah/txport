%table.table.table-condensed.table-hover
  %thead
    %tr
      %th= t 'vehicles.reg_no'
      %th= t 'vehicles.reg_on'
      %th= t 'vehicles.manufacturer_year' 
      %th= t 'vehicles.manufacturer' 
      %th= t 'vehicles.model' 
      %th= t 'vehicles.category' 
      %th= t 'vehicles.acquired_on' 
      %th= t 'vehicles.price' 
      %th= t 'vehicles.contract_no' 
      %th= t 'vehicles.status' 
      %th
  %tbody
    - @vehicles.each do |vehicle|
      %tr
        %td= vehicle.reg_no
        %td= vehicle.reg_on
        %td= vehicle.manufacturer_year
        %td= vehicle.manufacturer.try(:name)
        %td= vehicle.model
        %td= vehicle.category.try(:short_name)
        %td= vehicle.acquired_on
        %td= ringgols(vehicle.price)
        %td= vehicle.contract.try(:contract_no)
        %td= vehicle.status.try(:short_name)
        = render :partial => 'action_menu', :locals => { :vehicle => vehicle }
