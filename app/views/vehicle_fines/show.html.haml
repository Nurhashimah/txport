- provide(:title, 'Vehicle Fine Details')
- model_class = VehicleFine
.page-header
  %h1= t 'vehicle_fines.title', :default => model_class.model_name.human
%p#notice= notice

%dl.dl-horizontal
  %dt= t 'vehicle_fines.code', :default => model_class.human_attribute_name(:code) + ":"
  %dd= @vehicle_fine.code

%dl.dl-horizontal
  %dt= t 'vehicle.vehicle_id', :default => model_class.human_attribute_name(:vehicle_id) + ":"
  %dd= @vehicle_fine.try(:vehicle).try(:reg_no)

%dl.dl-horizontal
  %dt= t 'vehicle_fine_types.type_id', :default => model_class.human_attribute_name(:type_id) + ":"
  %dd= check_kin {@vehicle_fine.vehicle_fine_type.short_name}

%dl.dl-horizontal
  %dt= t 'vehicle_fines.issued_at', :default => model_class.human_attribute_name(:issued_at) + ":"
  %dd= @vehicle_fine.issued_at.try(:strftime, '%d-%b-%Y %H:%M')

%dl.dl-horizontal
  %dt= t 'vehicle_fines.pay_before', :default => model_class.human_attribute_name(:pay_before) + ":"
  %dd= @vehicle_fine.try(:strftime, '%d-%b-%Y')

%dl.dl-horizontal
  %dt= t 'vehicle_fines.location', :default =>model_class.human_attribute_name(:location) + ":"
  %dd= @vehicle_fine.location

%dl.dl-horizontal
  %dt= t 'vehicle_fines.reason', :default =>model_class.human_attribute_name(:reason) + ":"
  %dd= @vehicle_fine.reason

%dl.dl-horizontal
  %dt=  t 'vehicle_fines.compound', :default =>model_class.human_attribute_name(:compound) + ":"
  %dd= ringgols(@vehicle_fine.compound)

%dl.dl-horizontal
  %dt=  t 'vehicle_fines.receipt_no', :default =>model_class.human_attribute_name(:receipt_no) + ":"
  %dd= @vehicle_fine.receipt_no

%dl.dl-horizontal
  %dt=  t 'vehicle_fines.paid_on', :default =>model_class.human_attribute_name(:paid_on) + ":"
  %dd= @vehicle_fine.paid_on.try(:strftime, '%d-%b-%Y')

%dl.dl-horizontal
  %dt=  t 'vehicle_fines.paid_amount', :default =>model_class.human_attribute_name(:paid_amount) + ":"
  %dd= ringgols(@vehicle_fine.paid_amount)

.form-actions
  = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), vehicle_fines_path, :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), |
    edit_vehicle_fine_path(@vehicle_fine), :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
    vehicle_fines_path(@vehicle_fine),                                                                                                    |
    :method => 'delete',                                                                                                           |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
    :class => 'btn btn-danger'                                                                                             

