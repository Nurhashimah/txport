- provide(:title, 'Vehicles road taxes')
- model_class = VehicleRoadTax
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize


.navbar.navbar-inverse
  .navbar-inner
    %ul.nav
      %li= link_to content_tag(:li, fa_icon("truck", text: "New Vehicle Road Tax")), new_vehicle_road_tax_path
    %ul.nav.pull-right
      %li#toga= link_to content_tag(:li, fa_icon("search", text: "Search")), "#"
      %li= link_to content_tag(:li, fa_icon("print", text: "Print")), "#"

%table.table.table-condensed.table-hover
  %thead
    %tr
      %th Vehicle
      %th Start on
      %th End on
      %th Amount
      %th     
  %tbody
    - @vehicle_road_taxes.each do |vehicle_road_tax| 
      %tr
        %td= vehicle_road_tax.vehicle_id 
        %td= vehicle_road_tax.start_on 
        %td= vehicle_road_tax.end_on 
        %td= vehicle_road_tax.amount 
        = render :partial => 'action_menu', :locals => { :vehicle_road_tax => vehicle_road_tax }



