- provide(:title, 'Vehicle No (Army) Details')
- model_class = VehicleArmy
.page-header
  %h1= t 'vehicle_armies.title', :default => model_class.model_name.human
%p#notice= notice

%dl.dl-horizontal
  %dt= t 'vehicle_armies.v_army_no', :default => model_class.human_attribute_name(:civil_no) + ":"
  %dd= @vehicle_army.v_army_no  

.form-actions
  = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), vehicle_armies_path, :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), |
    edit_vehicle_army_path(@vehicle_army), :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), vehicle_army_path(@vehicle_army),                                                                                                    |
    :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'       
