.container{:style => "padding-left: 60px;"}
  = form_for @vehicle_army, :html => { :class => 'form-horizontal' }  do |f|
    = render 'shared/error_messages', object: f.object

    .control-group
      = f.label :v_army_no, :class => 'control-label'
      .controls= f.text_field :v_army_no, :class => 'text_field input-medium', :type => :text

    .form-actions
      = f.submit (t 'helpers.links.submit'), :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), |
        vehicle_armies_path, :class => 'btn'
