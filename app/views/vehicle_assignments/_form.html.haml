.container{:style => "padding-left: 60px;"}
  = form_for @vehicle_assignment, :html => { :class => 'form-horizontal' }  do |f|
    = render 'shared/error_messages', object: f.object

    .control-group
      = f.label :vehicle_id, :class => 'control-label'
      .controls= f.number_field :vehicle_id, :class => 'text_field'

    .control-group
      = f.label :staff_id, :class => 'control-label'
      .controls= f.number_field :staff_id, :class => 'text_field'

    .control-group
      = f.label :assigned_on, :class => 'control-label'
      .controls= f.date_select :assigned_on, :class => 'text_field'

    .control-group
      = f.label :assignment_end, :class => 'control-label'
      .controls= f.date_select :assignment_end, :class => 'text_field'

    .form-actions
      = f.submit nil, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), |
        vehicle_assignments_path, :class => 'btn'     
