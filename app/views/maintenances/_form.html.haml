.container{:style => "padding-left: 60px;"}
  = form_for @maintenance, :html => { :class => 'form-horizontal' }  do |f|
    = render 'shared/error_messages', object: f.object
    = f.hidden_field :vehicle_id

    %dl.dl-horizontal
      %dt
        %strong= t 'vehicles.reg_no'
      %dd
        = h @maintenance.vehicle.reg_no
    %br/

    .control-group
      = f.label :work_order_no, :class => 'control-label'
      .controls= f.text_field :work_order_no, :class => 'text_field'

    .control-group
      = f.label :contract_id, :class => 'control-label'
      .controls= f.collection_select :contract_id, Contract.find(:all), :id, :contract_no, :include_blank =>  t('helpers.prompt.select_contract'), :html_options => {:class => 'selectpicker'}

    .control-group
      = f.label :repaired_by, :class => 'control-label'
      .controls= f.collection_select :repaired_by, Company.find(:all), :id, :name, :include_blank =>  t('helpers.prompt.select_repaired_by'), :html_options => {:class => 'selectpicker'}

    .control-group
      = f.label :supplied_by, :class => 'control-label'
      .controls= f.collection_select :supplied_by, Company.find(:all), :id, :name, :include_blank =>  t('helpers.prompt.select_supplied_by'), :html_options => {:class => 'selectpicker'}


    .form-actions
      = f.submit t('.submit', :default => t("helpers.links.submit")), :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), maintenances_path, :class => 'btn'
