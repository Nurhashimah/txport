.container{:style => "padding-left: 60px;"}
  = form_for @maintenance, :html => { :class => 'form-horizontal' }  do |f|
    = render 'shared/error_messages', object: f.object

    .control-group
      = f.label :vehicle_id, :class => 'control-label'
      .controls= f.number_field :vehicle_id, :class => 'text_field'

    .control-group
      = f.label :work_order_no, :class => 'control-label'
      .controls= f.text_field :work_order_no, :class => 'text_field'

    .control-group
      = f.label :contract_id, :class => 'control-label'
      .controls= f.number_field :contract_id, :class => 'text_field'

    .control-group
      = f.label :repaired_by, :class => 'control-label'
      .controls= f.number_field :repaired_by, :class => 'text_field'

    .control-group
      = f.label :supplied_by, :class => 'control-label'
      .controls= f.number_field :supplied_by, :class => 'text_field'


    .form-actions
      = f.submit nil, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), |
        maintenance_path, :class => 'btn'
