- provide(:title, 'Fuel Unit Details')
- model_class = FuelUnit
.page-header
  %h1= t 'fuel_units.title', :default => model_class.model_name.human
%p#notice= notice
%dl.dl-horizontal
  %dt= t 'fuel_unit.unit_id', :default => model_class.human_attribute_name(:unit_id) + ":"
  %dd=  @fuel_unit.fuel_receiver.name
%dl.dl-horizontal
  %dt= t 'fuel_units.dept_account', :default => model_class.human_attribute_name(:locations) + ":"
  %dd= @fuel_unit.depot_account.name
%dl.dl-horizontal
  %dt= t 'fuel_units.report_date', :default => model_class.human_attribute_name(:capacity) + ":"
  %dd= @fuel_unit.report_date

.form-actions
  = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), fuel_units_path, :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), |
    edit_fuel_unit_path(@fuel_unit), :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
    fuel_tank_path(@fuel_unit),                                                                                                    |
    :method => 'delete',                                                                                                           |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
    :class => 'btn btn-danger'                                                                                                     |
