- provide(:title, 'Vehicle Manufacturers')
- model_class = VehicleManufacturer
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize
  
.navbar.navbar-inverse
  .navbar-inner
    %ul.nav
      %li= link_to content_tag(:li, fa_icon("asterisk", text: "New Vehicle Manufacturer")), new_vehicle_manufacturer_path, id: "add_new_manufacturer", remote: true
  
  
%table.table.table-condensed.table-hover#vehicle_status_list{:style => "width:90%;"}
  %thead
    %tr
      %th Name
      %th Country
      %th
      %th
      %th
  %tbody
    %tr#vehicle_manufacturer_form(style="display:none;")
      = render :partial => 'form'
    - @vehicle_manufacturers.each do |vehicle_manufacturer|
      %tr
        %td= vehicle_manufacturer.name
        %td= vehicle_manufacturer.country
        %td= link_to 'Show', vehicle_manufacturer
        %td= link_to 'Edit', edit_vehicle_manufacturer_path(vehicle_manufacturer)
        %td= link_to 'Destroy', vehicle_manufacturer, method: :delete, data: { confirm: 'Are you sure?' }
%br
  = link_to 'New Vehicle manufacturer', new_vehicle_manufacturer_path




