- provide(:title, 'New TEB')
- model_class = VehicleEndOfLife
.page-header
  %h1= t 'vehicle.endoflife.new', :default => [:'helpers.titles.new', 'New %{model}'], :model => model_class.model_name.human

.container{:style => "padding-left: 60px;"}
  = form_for @vehicle_end_of_life, :html => { :class => 'form-horizontal' }  do |f|
    = render 'shared/error_messages', object: f.object
    = f.hidden_field :vehicle_id

    %dl.dl-horizontal
      %dt
        %strong= t 'vehicles.reg_no'
      %dd= @vehicle_end_of_life.try(:vehicle).try(:reg_no)
    %br/
      

    .form-actions
      = f.submit "Process TEB", :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), |
        vehicle_end_of_lives_path, :class => 'btn'
        
