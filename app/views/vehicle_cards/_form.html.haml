.container{:style => "padding-left: 60px;"}
  = form_for @vehicle_card, :html => { :class => 'form-horizontal' }  do |f|
    = render 'shared/error_messages', object: f.object

    .control-group
      = f.label :vehicle_id, :class => 'control-label'
      .controls= f.collection_select :vehicle_id, Vehicle.find(:all), :reg_no, :model, :include_blank => 'Select vehicle no', :html_options => {:class => 'selectpicker'}
  
    .control-group
      = f.label :serial_no, :class => 'control-label'
      .controls= f.text_field :serial_no, :class => 'text_field'


    .form-actions
      = f.submit nil, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), |
        vehicle_cards_path, :class => 'btn'     
