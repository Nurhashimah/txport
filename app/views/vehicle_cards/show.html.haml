- provide(:title, 'Vehicle Card Details')
- model_class = VehicleCard
.page-header
  %h1= t 'vehicle_cards.title', :default => model_class.model_name.human
%p#notice= notice

%dl.dl-horizontal
  %dt= t 'vehicle.vehicle_id', :default => model_class.human_attribute_name(:vehicle_id) + ":"
  %dd= @vehicle_card.vehicle.reg_no if !@vehicle_card.vehicle_id.blank?

%dl.dl-horizontal
  %dt= t 'vehicle_cards.staff_id', :default => model_class.human_attribute_name(:serial_no) + ":"
  %dd= @vehicle_card.card_holder.staff_details

%dl.dl-horizontal
  %dt= t 'vehicle_cards.unit_id', :default => model_class.human_attribute_name(:serial_no) + ":"
  %dd= @vehicle_card.unit.name if !@vehicle_card.unit_id.blank?
  
%dl.dl-horizontal
  %dt= t 'vehicle_cards.serial_no', :default => model_class.human_attribute_name(:serial_no) + ":"
  %dd= @vehicle_card.serial_no
  
%dl.dl-horizontal
  %dt= t 'vehicle_cards.issue_date', :default => model_class.human_attribute_name(:serial_no) + ":"
  %dd= @vehicle_card.issue_date
  
%dl.dl-horizontal
  %dt= t 'vehicle_cards.start_date', :default => model_class.human_attribute_name(:serial_no) + ":"
  %dd= @vehicle_card.start_date

%dl.dl-horizontal
  %dt= t 'vehicle_cards.expired_date', :default => model_class.human_attribute_name(:serial_no) + ":"
  %dd= @vehicle_card.expired_date
  
%dl.dl-horizontal
  %dt= t 'vehicle_cards.smart_tag', :default => model_class.human_attribute_name(:serial_no) + ":"
  %dd= @vehicle_card.smart_tag
  
%dl.dl-horizontal
  %dt= t 'vehicle_cards.smarttag_serial', :default => model_class.human_attribute_name(:serial_no) + ":"
  %dd= @vehicle_card.smarttag_serial

.form-actions
  = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), vehicle_cards_path, :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), |
    edit_vehicle_card_path(@vehicle_card), :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
    vehicle_card_path(@vehicle_card),                                                                                                    |
    :method => 'delete',                                                                                                           |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
    :class => 'btn btn-danger'                                                                                             

