- provide(:title, 'Rank')
- model_class = Rank
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize
  
  
.navbar.navbar-inverse
  .navbar-inner
    %ul.nav
      %li= link_to content_tag(:li, fa_icon("truck", text: "New Rank")), new_rank_path
    %ul.nav.pull-right
      %li#toga= link_to content_tag(:li, fa_icon("search", text: "Search")), "#"
      %li= link_to content_tag(:li, fa_icon("print", text: "Print")), "#"
      
      
%table.table.table-condensed.table-hover
  %thead
    %tr
      %th Shortname
      %th Name
      %th 

  %tbody
    - @ranks.each do | rank |
      %tr
        %td= rank.shortname
        %td= rank.name
        = render :partial => 'action_menu', :locals => { :rank => rank }
      
      
